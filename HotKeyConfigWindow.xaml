<Window x:Class="tempCPU.HotKeyConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройка горячей клавиши"
        Height="150" Width="300"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Нажмите нужную клавишу:" Margin="0,0,0,10"/>
            <TextBox Name="KeyBox" Height="30"
                     KeyDown="KeyBox_KeyDown"
                     IsReadOnly="True"
                     />
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
